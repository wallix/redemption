    <cxxflags>"-s ABORTING_MALLOC=0"
    <cxxflags>"-s EXTRA_EXPORTED_RUNTIME_METHODS=['stringToUTF16']"
;

constant JS_MODULE_NAME : [ setvar JS_MODULE_NAME : "WallixModule" ] ;
constant JS_SOURCE_MAP : [ setvar JS_SOURCE_MAP : "''" ] ;
